<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="112dp"
    android:background="@android:color/white"
    android:paddingBottom="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="8dp">

    <ImageView
        android:id="@+id/routeListItem_imageView"
        android:layout_width="130dp"
        android:layout_height="match_parent"
        android:scaleType="matrix"
        android:background="@android:color/holo_blue_bright" />

    <RatingBar
        android:id="@+id/routeListItem_ratingBar"
        android:layout_width="90dp"
        android:layout_height="36dp"
        android:layout_alignBottom="@id/routeListItem_imageView"
        android:isIndicator="true"
        android:clickable="false"
        android:rating="3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/routeListItem_imageView"
        android:layout_toRightOf="@id/routeListItem_imageView"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/routeListItem_routeNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="18dp"
            android:textStyle="bold"
            tools:text="淡水線" />

        <TextView
            android:id="@+id/routeListItem_pokemonStationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/black"
            android:textSize="14dp"
            tools:text="Pokemon Station : 15" />

        <TextView
            android:id="@+id/routeListItem_kmTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:textColor="@android:color/black"
            android:textSize="14dp"
            tools:text="Kilometer : 4.3" />

        <TextView
            android:id="@+id/routeListItem_timeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:textColor="@android:color/black"
            android:textSize="14dp"
            tools:text="Time : 90 minute" />

        <TextView
            android:id="@+id/routeListItem_rentalTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:textColor="@android:color/black"
            android:textSize="14dp"
            tools:text="Bike Rental Station : YES" />

    </LinearLayout>

</RelativeLayout>